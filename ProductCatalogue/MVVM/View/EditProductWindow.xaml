<Window x:Class="ProductCatalogue.MVVM.View.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductCatalogue.MVVM.View"
        mc:Ignorable="d"
        Title="Edit Product" Height="200" Width="300"
        Background="Transparent">
    
    <Grid>

        <Border Background="#343131" >
            <Grid>
                <StackPanel Margin="20">
                    <TextBlock Text="Product Name:" 
                               Foreground="White"/>
                    <TextBox x:Name="NameTextBox" />
                    <TextBlock Text="Product Price:"
                               Foreground="White"/>
                    <TextBox x:Name="PriceTextBox" />
                    <Button Content="Edit"
                            x:Name="BtnEdit"
                            Click="BtnEdit_Click"/>
                </StackPanel>
            </Grid>
        </Border>
  

    </Grid>
</Window>
