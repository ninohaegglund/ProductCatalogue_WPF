<Window x:Class="ProductCatalogue.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductCatalogue"
        mc:Ignorable="d"
        Title="Product Catalogue" 
        Height="600" Width="920"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"        
        >

    <Border Background="#3C3D37" CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Product Catalogue"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Foreground="White"                                      
                    FontSize="18"
                    Margin="22,0,0,0"
                    FontWeight="Bold"/>

            <StackPanel Grid.Row="1">
                
                <TextBlock Text="Name" 
                           Foreground="White"
                           Margin="5,0,0,0"/>

                <TextBox x:Name="InputName" 
                         Margin="0,5,0,10" 
                         Padding="5"
                         Background="#1E201E"
                         Foreground="AntiqueWhite"
                         BorderBrush="Purple"
                         BorderThickness="0.35"
                         />

                <TextBlock Text="Price" 
                           Foreground="White"
                           Margin="5,0,0,0"/>
                
                <TextBox x:Name="InputPrice" 
                         Margin="0,5,0,15" 
                         Padding="5"
                         Background="#1E201E"
                         Foreground="AntiqueWhite"
                         BorderBrush="Purple"
                         BorderThickness="0.35"
                        />

                <Button Content="Add Product"
                             x:Name="BtnSave"
                             Foreground="White"
                             FontSize="16"
                             Width="100"
                             HorizontalAlignment="Left"
                             Style="{StaticResource MenuBtnTheme}"
                             Click="BtnSave_Click"/>

                <Button Content="Exit Program"
                             x:Name="BtnExit"
                             Foreground="White"
                             FontSize="16"
                             Style="{StaticResource MenuBtnTheme}"
                             HorizontalAlignment="Left"
                             Margin="0,300,0,0"
                             Width="100"
                             Click="BtnExit_Click"/>

            </StackPanel>


            <TextBox Width="250"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextBox}"/>

            <Button Content="View Categories"
             Foreground="#F5EFFF"
             FontSize="16"
             Height="25"
             VerticalContentAlignment="Center"
             HorizontalAlignment="Right"
             Margin="0,0,10,0"
             Style="{StaticResource MenuBtnTheme}"
             Grid.Column="1"
             FontWeight="Bold"/>
             
            <Button Content="View Product List"
             Foreground="#F5EFFF"
             FontWeight="Bold"
             FontSize="16"
             Height="25"
             VerticalContentAlignment="Center"
             HorizontalAlignment="Right"
             Margin="0,0,150,0"
             Style="{StaticResource MenuBtnTheme}"
             Grid.Column="1"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"/>
            
            <ListView x:Name="LvProducts"  
                      Grid.Column="1" 
                      Background="#1E201E"
                      BorderBrush="Purple"
                      BorderThickness="0.35"
                      Foreground="White"
                      Width="250"
                      SelectionMode="Single"
                      HorizontalContentAlignment="Stretch" 
                      Margin="32,10,438,64" 
                      Grid.Row="1">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition  />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="12"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{Binding PriceFormatted}"
                                           FontSize="9"
                                           FontWeight="Bold"/>
                            </StackPanel>

                            <Button Grid.Column="1" 
                                    x:Name="Btn_Delete" 
                                    Click="Btn_Delete_Click"
                                    Margin="50,0,0,0">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" 
                                                Value="Transparent" />
                                        <Setter Property="BorderThickness" 
                                                Value="0" />
                                        <Setter Property="FontSize" 
                                                Value="14" />
                                        <Setter Property="Foreground" 
                                                Value="White" />
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="Transparent">
                                                        <ContentPresenter HorizontalAlignment="Center" 
                                                                          VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" 
                                                     Value="True" >
                                                <Setter Property="Foreground" 
                                                        Value="Red" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                                <TextBlock FontFamily="Segoe MDL2 Assets" 
                                           Text="&#xE74D;" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Border>
</Window>
